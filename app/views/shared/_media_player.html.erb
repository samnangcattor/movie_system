<% if @movie.link.sky_drive? %>
  <iframe style="width: 854px; height: 552px; border: 0px;" scrolling="no" src="https://onedrive.live.com/prev?cid=<%= @movie.link.cid %>&amp;id=<%= @movie.link.sky_id %>&amp;authkey=!<%= @movie.link.authkey %>&amp;parId=root&amp;view=video&amp;mode=interactiveEmbed" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true"></iframe>
<% elsif @movie.link.google_plus? %>
  <div id="player" data-default="<%= @movie.link.url_default %>" data-hd="<%= @movie.link.url_hd %>" data-sub="<%= @movie.link.subtitle %>"></div>
<% else %>
  <%= image_tag "logo.png", id: "player_logo" %>
    <iframe src="<%= @movie.link.url_default %>" width="700" height="400" allowfullscreen></iframe>
   <noembed><%= @movie.title %></noembed>
<% end %>
