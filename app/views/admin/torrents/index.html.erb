<div class="container">
  <div class="panel panel-success">
    <div class="panel-heading">
    </div>
    <div class="panel-body">
      <%= form_tag admin_torrents_path, method: :get do %>
        <div class="form-group">
          <%= label_tag "torrent_title", nil, class: "label-control" %>
          <%= text_field_tag "torrent[title]", nil, class: "form-control", required: true %>
        </div>
        <div class="form-group">
          <%= label_tag "torrent_photo", nil, class: "label-control" %>
          <%= url_field_tag "torrent[photo]", nil, class: "form-control", required: true %>
        </div>
        <div class="form-group">
          <%= label_tag "torrent_year", nil, class: "label-control" %>
          <%= number_field_tag "torrent[year]", nil, class: "form-control", required: true %>
        </div>
        <div class="form-group">
          <%= label_tag "torrent_torrent", nil, class: "label-control" %>
          <%= text_field_tag "torrent[torrent]", nil, class: "form-control", required: true %>
        </div>
        <div class="form-group">
          <%= submit_tag "Sumbit", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
