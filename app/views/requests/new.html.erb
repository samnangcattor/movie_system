<% meta title: t("app_requests"), description: t("description"),
  keywords: %w(movies khmer moviehd moviehdkh watch) %>
<div class="container">
  <div class="request">
    <div class="panel panel-success">
      <div class="panel-heading text-left">
        <h3><i class="glyphicon glyphicon-film"></i> <%= t ".request" %></h3>
      </div>
      <div class="panel-body">
        <%= form_for @request, html: {class: "form-horizontal"} do |f| %>
          <div class="form-group">
            <%= f.label :name, t(".name"), class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: "form-control",
                placeholder: t(".title"), required: true %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :description, t(".description"), class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_area :description, class: "form-control",
                placeholder: t(".description"), required: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-3">
              <%= f.submit t("actions.send_request"), class: "btn btn-success btn-block" %>
            </div>
          </div>
        <% end %>
        <div id="SC_TBlock_108990" class="SC_TBlock">loading...</div>
        <script type="text/javascript">var SC_CId = "108990",SC_Domain="n.ads3-adnow.com";SC_Start_108990=(new Date).getTime();</script>
        <script type="text/javascript" src="http://st.n.ads3-adnow.com/js/adv_out.js"></script>
      </div>
      <%= render "shared/adnow_advertise" %>
    </div>
  </div>
</div>
